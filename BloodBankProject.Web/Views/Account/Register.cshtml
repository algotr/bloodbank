@model BloodBankProject.Web.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "التسجيل";
}
<div class="container">


    <h4 class="modal-title" id="registerModalLabel">
        تسجيل حساب جديد - @ViewBag.Username
    </h4>
</div>
@using (Html.BeginForm("RegisterPage", "Account", FormMethod.Post, new { role = "form", @class = "from-class" }))
{
    <div class="modal-body">
        <div class="form-group">
            @Html.LabelFor(r => r.Username)
            @Html.TextBoxFor(r => r.Username, null, new { @class = "form-control", placeholder = "اسم المستخدم" })
            @Html.ValidationMessageFor(r => r.Username)
        </div>
        <div class="form-group">
            @Html.LabelFor(r => r.Email)
            @Html.TextBoxFor(r => r.Email, null, new { @class = "form-control", placeholder = "البريد الالكتروني" })
            @Html.ValidationMessageFor(r => r.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(r => r.Password)
            @Html.PasswordFor(r => r.Password, new { @class = "form-control", placeholder = "كلمة المرور" })
            @Html.ValidationMessageFor(r => r.Password)
        </div>
        <div class="form-group">
            @Html.LabelFor(r => r.PasswordConfirm)
            @Html.PasswordFor(r => r.PasswordConfirm, new { @class = "form-control", placeholder = "تأكيد كلمة المرور" })
            @Html.ValidationMessageFor(r => r.PasswordConfirm)
        </div>

    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">تسجيل</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">اغلاق</button>
    </div>
}
</div>
@section scripts {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}

